@model IEnumerable<Event>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bordered table</h4>

            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                           
                            <th> Title </th>
                            <th> SubTitle </th>
                            <th> Date Time </th>
                            <th> Operitions </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var eveent in Model)
                        {
                            <tr>
                               
                                <td> @eveent.Title </td>
                                <td>
                                    @eveent.Subtitle
  
                                </td>
                                <td> @eveent.CreateTime.ToString("MM/dd/yyyy") </td>
                                <td>
                                    <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@eveent.Id">Info</a>
                                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@eveent.Id">Edit</a>
                                    <a class="btn btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

                <a class="btn btn-success" style="float:left; margin-top:20px; " asp-action="Create">Create</a>
            </div>
        </div>
    </div>
</div>

