@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Index";
}


<div class="container my-5">

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Operations
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var slider in Model)
                {
                    <tr>
                        <td class="py-1">
                            <img src="~/images/@slider.Image" style="width:120px;height:90px;" alt="image" />
                        </td>
                        <td>
                            @if (!slider.SoftDelete)
                            {
                                <div class="active-status"></div>
                            }
                            else
                            {
                                <div class="deActive-status"></div>
                            }


                        </td>
                        <td>
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@slider.Id">Info</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@slider.Id">Edit</a>
                            <a class="btn btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
        <a class="btn btn-success" style="float:left" asp-action="Create">Create</a>

    </div>
</div>