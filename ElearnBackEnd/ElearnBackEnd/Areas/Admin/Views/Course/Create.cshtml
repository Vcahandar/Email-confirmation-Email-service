@model CourseCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">
    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">

        <div class="form-group mt-5">
            <label for="formFile" class="form-label"><b>Add a new Title</b></label>
            <input class="form-control" type="text" id="formFile" asp-for="Title">

        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label"><b>Add a new Description</b></label>
            <input class="form-control" type="text" id="formFile" asp-for="Description">

        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label"><b>Add a new Price</b></label>
            <input class="form-control" type="text" id="formFile" asp-for="Price">

        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label"><b>Add a new Count</b></label>
            <input class="form-control" type="text" id="formFile" asp-for="Count">

        </div>

        <div class="form-group mt-5">
            <label for="formFile" class="form-label"><b>Add a new Author</b></label>
            <select class="form-control" id="formFile" asp-for="AuthorId" asp-items="@ViewBag.authors"></select>

        </div>

        <div class="form-group mt-5">
            <label for="formFile" class="form-label"><b>Add a new Photos</b></label>
            <input class="form-control" id="customFile" asp-for="Photos" />
        </div>
        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

